{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2020",
		"baseUrl": ".",
		"rootDir": "src",
		"paths": {
			"@shared/*": ["../src/*"]
		},
		"typeRoots": ["./node_modules/@types"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"compileOnSave": true,
	"include": ["src"],
	"references": [{ "path": "../" }]
}
